{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "prefer-const": "error",
        "indent": [
            "warn",
            4
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
